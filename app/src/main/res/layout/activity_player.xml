<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"    xmlns:tools="http://schemas.android.com/tools"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:background="@drawable/gradient2"    android:orientation="vertical"    tools:context=".Player">    <RelativeLayout        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_marginTop="100dp">        <ImageView            android:id="@+id/songImage"            android:layout_width="300dp"            android:layout_height="300dp"            android:layout_centerInParent="true"            android:src="@drawable/headphone" />    </RelativeLayout>    <TextView        android:id="@+id/songname"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:layout_margin="20dp"        android:fontFamily="@font/brandon_grotesque_black"        android:text="SAMPLE"        android:textColor="@color/white"        android:textSize="30dp" />    <LinearLayout        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:orientation="horizontal"        android:padding="12dp">        <TextView            android:id="@+id/position"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:text="00:00"            android:textColor="@color/white"            android:textStyle="bold" />        <SeekBar            android:id="@+id/seekbar"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_weight="1" />        <TextView            android:id="@+id/duration"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:text="00:00"            android:textColor="@color/white"            android:textStyle="bold" />    </LinearLayout>    <LinearLayout        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_marginTop="10dp"        android:gravity="center"        android:orientation="horizontal">        <ImageView            android:id="@+id/bt_shuffleOn"            android:layout_width="40dp"            android:layout_height="40dp"            android:padding="10dp"            android:src="@drawable/shuffleon"            android:visibility="gone" />        <ImageView            android:id="@+id/bt_shuffle"            android:layout_width="40dp"            android:layout_height="40dp"            android:padding="10dp"            android:src="@drawable/shuffle" />        <ImageView            android:id="@+id/bt_rew"            android:layout_width="60dp"            android:layout_height="60dp"            android:layout_margin="10dp"            android:src="@drawable/previous" />        <ImageView            android:id="@+id/bt_play"            android:layout_width="60dp"            android:layout_height="60dp"            android:layout_margin="10dp"            android:src="@drawable/play" />        <ImageView            android:id="@+id/bt_pause"            android:layout_width="60dp"            android:layout_height="60dp"            android:layout_margin="10dp"            android:src="@drawable/pause"            android:visibility="gone" />        <ImageView            android:id="@+id/bt_ff"            android:layout_width="60dp"            android:layout_height="60dp"            android:layout_margin="10dp"            android:src="@drawable/next" />        <ImageView            android:id="@+id/bt_repeat"            android:layout_width="40dp"            android:layout_height="40dp"            android:padding="10dp"            android:src="@drawable/repeat" />        <ImageView            android:id="@+id/bt_repeat_on"            android:layout_width="40dp"            android:layout_height="40dp"            android:padding="10dp"            android:src="@drawable/repeat_on"            android:visibility="gone" />    </LinearLayout></LinearLayout>